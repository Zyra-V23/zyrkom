{
  "productName": "Zyrkom Matrix UI",
  "identifier": "com.zyrkom.matrix-ui",
  "version": "0.1.0",
  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": false
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Zyrkom Matrix UI - Musical Cryptography Framework",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability for Zyrkom Matrix UI",
          "windows": ["main"],
          "permissions": [
            "core:default"
          ]
        }
      ]
    }
  }
} 